# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py diff=python

# Markdown files
*.md diff=markdown

# Shell scripts
*.sh text eol=lf

# Batch scripts
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.pyc binary
*.pdf binary

# Archives
*.jar binary
*.war binary
*.ear binary
*.sar binary
*.rar binary

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore